@model IList<CategoryModel>
@if (Model.Count > 0)
{
    var listingModel = Model.Take(5).ToList();

    <section class="category-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-12">
                    <div class="row">
                        <div class="col-lg-8 col-md-8">
                            <div class="single-deal">
                                @{ var firstCat = listingModel.ElementAt(0); }
                                <div class="overlay"></div>
                                <img class="img-fit w-100" src="@firstCat.PictureModel.ImageUrl" alt="@firstCat.PictureModel.AlternateText" title="@firstCat.PictureModel.Title">
                                <a href="@Url.RouteUrl("Category", new { SeName = firstCat.SeName })" target="_parent">
                                    <div class="deal-details">
                                        <h6 class="deal-title">@firstCat.Name</h6>
                                    </div>
                                </a>
                            </div>
                        </div>
                        @if (listingModel.Count > 1)
                        {
                            <div class="col-lg-4 col-md-4">
                                <div class="single-deal">
                                    @{ var secondCat = listingModel.ElementAt(1); }
                                    <div class="overlay"></div>
                                    <img class="img-fit w-100" src="@secondCat.PictureModel.ImageUrl" alt="@secondCat.PictureModel.AlternateText" title="@secondCat.PictureModel.Title">
                                    <a href="@Url.RouteUrl("Category", new { SeName = secondCat.SeName })" target="_parent">
                                        <div class="deal-details">
                                            <h6 class="deal-title">@secondCat.Name</h6>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                        @if (listingModel.Count > 2)
                        {
                            <div class="col-lg-4 col-md-4">
                                <div class="single-deal">
                                    @{ var thirdCat = listingModel.ElementAt(2); }
                                    <div class="overlay"></div>
                                    <img class="img-fit w-100" src="@thirdCat.PictureModel.ImageUrl" alt="@thirdCat.PictureModel.AlternateText" title="@thirdCat.PictureModel.Title">
                                    <a href="@Url.RouteUrl("Category", new { SeName = thirdCat.SeName })" target="_parent">
                                        <div class="deal-details">
                                            <h6 class="deal-title">@thirdCat.Name</h6>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                        @if (listingModel.Count > 3)
                        {
                            <div class="col-lg-8 col-md-8">
                                <div class="single-deal">
                                    @{ var fourthCat = listingModel.ElementAt(3); }
                                    <div class="overlay"></div>
                                    <img class="img-fit w-100" src="@fourthCat.PictureModel.ImageUrl" alt="@fourthCat.PictureModel.AlternateText" title="@fourthCat.PictureModel.Title">
                                    <a href="@Url.RouteUrl("Category", new { SeName = fourthCat.SeName })" target="_parent">
                                        <div class="deal-details">
                                            <h6 class="deal-title">@fourthCat.Name</h6>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                @if (listingModel.Count > 4)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-deal">
                            @{ var fifthCat = listingModel.ElementAt(4); }
                            <div class="overlay"></div>
                            <img class="w-100 h-95" src="@fifthCat.PictureModel.ImageUrl" alt="@fifthCat.PictureModel.AlternateText" title="@fifthCat.PictureModel.Title">
                            <a href="@Url.RouteUrl("Category", new { SeName = fifthCat.SeName })" target="_parent">
                                <div class="deal-details">
                                    <h6 class="deal-title">@fifthCat.Name</h6>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}