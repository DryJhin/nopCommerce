<script asp-location="Footer">
    $(document).ready(function () {
        $('#eu-cookie-bar-notification').show();

        $('#eu-cookie-ok').on('click', function () {
            $.ajax({
                cache: false,
                type: "POST",
                url: "@Url.RouteUrl("EuCookieLawAccept")",
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    $('#eu-cookie-bar-notification').hide();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert('Cannot store value');
                }
            });
        });
    });
</script>
<div id="eu-cookie-bar-notification" class="eu-cookie-bar-notification fixed-bottom">
    <div class="text-center">
        <div class="p-3">
            @T("EUCookieLaw.Description2")
            <a class="learn-more" href="@Url.RouteUrl("Topic", new { SeName = Html.GetTopicSeName("privacyinfo") })">@T("EUCookieLaw.LearnMore")</a>
            <button type="button" class="genric-btn primary-btn radius" id="eu-cookie-ok">@T("Common.OK")</button>
        </div>
    </div>
</div>