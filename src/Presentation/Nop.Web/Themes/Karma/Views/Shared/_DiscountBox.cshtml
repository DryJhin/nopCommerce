@model ShoppingCartModel.DiscountBoxModel
@if (Model.Display)
{
    <div class="cupon_text d-flex align-items-center">
        <div class="col">
            <input name="discountcouponcode" id="discountcouponcode" type="text" placeholder="@T("ShoppingCart.DiscountCouponCode.Label")" aria-label="@T("ShoppingCart.DiscountCouponCode.Label")" />
        </div>
        <div class="col">
            <input type="submit" name="applydiscountcouponcode" id="applydiscountcouponcode"
                   value="@T("ShoppingCart.DiscountCouponCode.Button")" class="primary-btn" />
        </div>
    </div>

    @foreach (var message in Model.Messages)
    {
        <div class="@(Model.IsApplied ? "message-success" : "message-failure")">
            @message
        </div>
    }
    @foreach (var discount in Model.AppliedDiscountsWithCodes)
    {
        <div class="current-code">
            <h5>@string.Format(T("ShoppingCart.DiscountCouponCode.CurrentCode").Text, discount.CouponCode)</h5>

            <input type="submit" name="removediscount-@discount.Id" value=" " title="@T("Common.Remove")" class="gray_btn" />
        </div>
    }
    <script asp-location="Footer">
        $(document).ready(function () {
            $('#discountcouponcode').on('keydown', function (event) {
                if (event.keyCode == 13) {
                    $('#applydiscountcouponcode').trigger("click");
                    return false;
                }
            });
        });
    </script>
}