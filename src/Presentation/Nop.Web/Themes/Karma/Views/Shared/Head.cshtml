@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;

    //add main CSS file
    if (supportRtl)
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css");
    }
    //add jQuery UI css file

    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/main.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/ion.rangeSlider.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/ion.rangeSlider.skinFlat.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/drift-basic.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/nouislider.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/nice-select.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/themify-icons.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/font-awesome.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/linearicons.css");
    Html.AppendCssFileParts("~/lib/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.min.css");
}