@model PasswordRecoveryConfirmModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}

<!--product breadcrumb-->
@section Breadcrumb
{
    @Html.BuildBreadcrumbNavigation();
}

<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="img/login.jpg" alt="">
                    <div class="hover">
                        <h4>@T("Account.PasswordRecovery")</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    @if (!string.IsNullOrEmpty(Model.Result))
                    {
                        <div class="result">
                            @Model.Result
                        </div>
                    }
                <form asp-route="PasswordRecoveryConfirm" asp-route-token="@Context.Request.Query["token"]" asp-route-email="@Context.Request.Query["email"]" method="post" class="row login_form">
                    <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    <div class="col-md-12 form-group">
                        <input asp-for="NewPassword" class="form-control" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" />
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="col-md-12 form-group">
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" />
                        <span asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                    <div class="col-md-12 form-group">
                        <input asp-for="NewPassword" class="form-control" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" />
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="col-md-12 form-group">
                        <input type="submit" name="set-password" class="primary-btn" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</section>