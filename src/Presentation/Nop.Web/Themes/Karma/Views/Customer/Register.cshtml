@model RegisterModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Register").Text);
    //page class
    Html.AppendPageCssClassParts("html-registration-page");
}

<!--product breadcrumb-->
@section Breadcrumb
{
    @Html.BuildBreadcrumbNavigation();
}

<div class="d-flex align-content-center justify-content-center section_gap">
    <div class="row">
        <form asp-route="Register" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" class="login_form">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <h3 class="text-center">@T("Account.YourPersonalDetails")</h3>
            <div class="row mt-3">
                <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'First Name *'" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Last Name *'" />
                    <span asp-validation-for="LastName"></span>
                </div>
                @if (Model.GenderEnabled)
                {
                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                        <div class="switch-wrap d-flex justify-content-between">
                            <p>@T("Account.Fields.Gender.Male")</p>
                            <div class="primary-radio">
                                <input type="checkbox" asp-for="Gender" value="M" id="gender-male" checked="@(Model.Gender == "M")" />
                                <label for="gender-male"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                        <div class="switch-wrap d-flex justify-content-between">
                            <p>@T("Account.Fields.Gender.Female")</p>
                            <div class="primary-radio">
                                <input type="checkbox" asp-for="Gender" value="F" checked="@(Model.Gender == "F")" id="gender-female" />
                                <label for="gender-female"></label>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.DateOfBirthEnabled)
                {
                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                        <div class="inputs date-of-birth">
                            <label>@T("Account.Fields.DateOfBirth"):</label>
                            <nop-date-picker asp-day-name="@Html.NameFor(x => x.DateOfBirthDay)"
                                             asp-month-name="@Html.NameFor(x => x.DateOfBirthMonth)"
                                             asp-year-name="@Html.NameFor(x => x.DateOfBirthYear)"
                                             asp-begin-year="@(DateTime.Now.Year - 110)"
                                             asp-end-year="@(DateTime.Now.Year)"
                                             asp-selected-day="@Model.DateOfBirthDay"
                                             asp-selected-month="@Model.DateOfBirthMonth"
                                             asp-selected-year="@Model.DateOfBirthYear" />
                            @if (Model.DateOfBirthRequired)
                            {
                                <nop-required />
                            }
                            <span asp-validation-for="DateOfBirthDay"></span>
                            <span asp-validation-for="DateOfBirthMonth"></span>
                            <span asp-validation-for="DateOfBirthYear"></span>
                        </div>
                    </div>
                }
                @if (Model.EnteringEmailTwice)
                {
                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email *'" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                        <input asp-for="ConfirmEmail" class="form-control" placeholder="Confirm Email *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Email *'" />
                        <span asp-validation-for="ConfirmEmail"></span>
                    </div>
                }
                else
                {
                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email *'" />
                        <span asp-validation-for="Email"></span>
                    </div>
                }
                @if (Model.UsernamesEnabled)
                {
                    @if (Model.CheckUsernameAvailabilityEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <input asp-for="Username" class="form-control" placeholder="LastName *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username *'" />
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            @await Html.PartialAsync("_CheckUsernameAvailability")
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                            <input asp-for="Username" class="form-control" placeholder="LastName *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username *'" />
                            <span asp-validation-for="Username"></span>
                        </div>
                    }

                }
            </div>
            @if (Model.CompanyEnabled || Model.DisplayVatNumber)
            {
                <h3 class="text-center">@T("Account.CompanyDetails")</h3>
                <div class="row mt-3">
                    @if (Model.CompanyEnabled)
                    {
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                            <input asp-for="Company" class="form-control" placeholder="Company" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Company'" />
                            <span asp-validation-for="Company"></span>
                        </div>
                    }
                    @if (Model.DisplayVatNumber)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <input asp-for="VatNumber" class="form-control" placeholder="Vat Number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Vat Number'" />
                            <span asp-validation-for="VatNumber"></span>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                            <span class="vat-note"><em>@T("Account.Fields.VatNumber.Note")</em></span>
                        </div>
                    }
                </div>
            }
            @if (Model.StreetAddressEnabled ||
Model.StreetAddress2Enabled ||
Model.ZipPostalCodeEnabled ||
Model.CityEnabled ||
Model.CountyEnabled ||
Model.CountryEnabled)
            {
                <h3 class="text-center">@T("Account.YourAddress")</h3>
                <div class="row mt-3">
                    @if (Model.StreetAddressEnabled)
                    {
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                            <input asp-for="StreetAddress" class="form-control" placeholder="Street Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Street Address'" />
                            <span asp-validation-for="StreetAddress"></span>
                        </div>
                    }
                    @if (Model.StreetAddress2Enabled)
                    {
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                            <input asp-for="StreetAddress2" class="form-control" placeholder="Street Address 2" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Street Address 2'" />
                            <span asp-validation-for="StreetAddress2"></span>
                        </div>
                    }
                    @if (Model.CountryEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <select asp-for="CountryId" asp-items="Model.AvailableCountries"
                                    data-trigger="country-select"
                                    data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                                    data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                                    data-loading="#states-loading-progress"></select>
                            <span asp-validation-for="CountryId"></span>
                        </div>
                    }
                    @if (Model.CountryEnabled && Model.StateProvinceEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <select asp-for="StateProvinceId" asp-items="Model.AvailableStates"></select>
                            <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait...")</span>
                            <span asp-validation-for="StateProvinceId"></span>
                        </div>
                    }
                    @if (Model.CountyEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <input asp-for="County" class="form-control" placeholder="County" onfocus="this.placeholder = ''" onblur="this.placeholder = 'County'" />
                            <span asp-validation-for="County"></span>
                        </div>
                    }
                    @if (Model.CityEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <input asp-for="City" class="form-control" placeholder="City" onfocus="this.placeholder = ''" onblur="this.placeholder = 'City'" />
                            <span asp-validation-for="City"></span>
                        </div>
                    }
                    @if (Model.ZipPostalCodeEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <input asp-for="ZipPostalCode" class="form-control" placeholder="Zip Postal Code" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Zip Postal Code'" />
                            <span asp-validation-for="ZipPostalCode"></span>
                        </div>
                    }
                </div>
            }
            @if (Model.PhoneEnabled || Model.FaxEnabled)
            {
                <h3 class="text-center">@T("Account.YourContactInformation")</h3>
                <div class="row mt-3">
                    @if (Model.PhoneEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <input asp-for="Phone" class="form-control" placeholder="Phone" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Phone'" />
                            <span asp-validation-for="Phone"></span>
                        </div>
                    }
                    @if (Model.FaxEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <input asp-for="Fax" class="form-control" placeholder="Fax" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Fax'" />
                            <span asp-validation-for="Fax"></span>
                        </div>
                    }
                </div>
            }
            <h3 class="text-center">@T("Account.YourPassword")</h3>
            <div class="row mt-3">
                @if (Model.PhoneEnabled)
                {
                    <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                        <input asp-for="Password" class="form-control" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" />
                        <span asp-validation-for="Password"></span>
                    </div>
                }
                @if (Model.FaxEnabled)
                {
                    <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                }
            </div>
            @if (Model.NewsletterEnabled || Model.CustomerAttributes.Count > 0 || Model.AllowCustomersToSetTimeZone)
            {
                <h3 class="text-center">@T("Account.Options")</h3>
                <div class="row mt-3">
                    @if (Model.NewsletterEnabled)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <div class="single-element-widget">
                                <div class="switch-wrap d-flex justify-content-between align-items-center">
                                    <p style="margin-top:14px!important">@T("Account.Fields.Newsletter")</p>
                                    <div class="primary-switch">
                                        <input asp-for="Newsletter" />
                                        <label asp-for="Newsletter" style="font-size: 0;"></label>
                                        <span asp-validation-for="Newsletter"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model.AllowCustomersToSetTimeZone)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <select asp-for="TimeZoneId" asp-items="Model.AvailableTimeZones"></select>
                            <span asp-validation-for="TimeZoneId"></span>
                        </div>
                    }
                    @if (Model.CustomerAttributes.Count > 0)
                    {
                        @await Html.PartialAsync("_CustomerAttributes", Model.CustomerAttributes)
                    }
                </div>
            }
            @if (Model.AcceptPrivacyPolicyEnabled || Model.GdprConsents.Count > 0)
            {
                <h3 class="text-center">@T("Account.UserAgreement")</h3>
                <div class="row mt-3">
                    @if (Model.AcceptPrivacyPolicyEnabled)
                    {
                        <script asp-location="Footer">
                                $(document).ready(function() {
                                    $('#register-button').on('click', function() {
                                        if ($('#accept-consent').is(':checked')) {
                                            //do some stuff
                                            return true;
                                        } else {
                                            //just show validation errors, don't post
                                            alert('@Html.Raw(JavaScriptEncoder.Default.Encode(T("Account.Fields.AcceptPrivacyPolicy.Required").Text))');
                                            return false;
                                        }
                                    });
                                });
                        </script>
                        <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                            <div class="single-element-widget">
                                <div class="switch-wrap d-flex justify-content-between align-items-center">
                                    <p style="margin-top:14px!important">
                                        @T("Account.Fields.AcceptPrivacyPolicy")
                                        @if (Model.AcceptPrivacyPolicyPopup)
                                        {
                                            <span class="read" id="read-privacyinfo">@T("Account.Fields.AcceptPrivacyPolicy.Read")</span>
                                            <script asp-location="Footer">
                                                    $(document).ready(function() {
                                                        $('#read-privacyinfo').on('click',
                                                            function(e) {
                                                                displayPopupContentFromUrl(
                                                                    '@Url.RouteUrl("TopicPopup", new {SystemName = "privacyinfo"})',
                                                                    '@T("Account.Fields.AcceptPrivacyPolicy")');
                                                            });
                                                    });
                                            </script>
                                        }
                                        else
                                        {
                                            <a class="read" id="read-privacyinfo" href="@Url.RouteUrl("Topic", new {SeName = Html.GetTopicSeName("privacyinfo") })">@T("Account.Fields.AcceptPrivacyPolicy.Read")</a>
                                        }
                                    </p>
                                    <div class="primary-switch">
                                        <input id="accept-consent" type="checkbox" name="accept-consent" />
                                        <label for="accept-consent" style="font-size: 0;"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model.GdprConsents.Count > 0)
                    {
                        foreach (var consent in Model.GdprConsents)
                        {
                            if (consent.IsRequired)
                            {
                                <script asp-location="Footer">
                                    $(document).ready(function() {
                                        $('#register-button').on('click', function() {
                                            if ($('#consent@(consent.Id)').is(':checked')) {
                                                    //do some stuff
                                                    return true;
                                                } else {
                                                    //just show validation errors, don't post
                                               alert('@Html.Raw(JavaScriptEncoder.Default.Encode(consent.RequiredMessage))');
                                                    return false;
                                                }
                                            });
                                    });
                                </script>
                            }
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group" style="width: 100%;">
                                <div class="single-element-widget">
                                    <div class="switch-wrap d-flex justify-content-between align-items-center">
                                        <p style="margin-top:14px!important">
                                            @consent.Message
                                        </p>
                                        <div class="primary-switch">
                                            <input id="consent@(consent.Id)" type="checkbox" name="consent@(consent.Id)" checked="@consent.Accepted" />
                                            <label For="consent@(consent.Id)" style="font-size: 0;"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            }
            <div class="row mt-3">
                <div class="col-md-12 form-group">
                    @if (Model.DisplayCaptcha)
                    {
                        <div class="captcha-box">
                            <nop-captcha />
                        </div>
                    }
                    @if (Model.HoneypotEnabled)
                    {
                        @Html.Raw(Html.GenerateHoneypotInput())
                    }
                </div>
                <div class="col-md-12 form-group">
                    <button type="submit" id="register-button" class="primary-btn" name="register-button">@T("Account.Register.Button")</button>
                </div>

            </div>
        </form>
        <div class="external-authentication">
            @await Component.InvokeAsync("ExternalMethods", "ExternalAuthentication")
        </div>
    </div>
</div>