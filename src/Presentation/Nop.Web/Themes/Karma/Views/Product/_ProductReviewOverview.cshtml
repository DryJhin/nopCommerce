@model ProductReviewOverviewModel
@using System.Globalization
@{
    var ratingPercent = 0;
    if (Model.TotalReviews != 0)
    {
        ratingPercent = ((Model.RatingSum * 100) / Model.TotalReviews) / 5;
    }
    var ratingValue = ratingPercent / (decimal)20;
}
@if (Model.AllowCustomerReviews)
{
    <div class="col-6">
        <div class="box_total" @if (Model.TotalReviews > 0) { <text> itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating" </text> }>
            <h5>Overall</h5>
            <h4>@ratingValue.ToString("0.0", new CultureInfo("en-US"))</h4>
            <h6>(@Model.TotalReviews @T("Reviews.Overview.Reviews"))</h6>
            @*hidden microdata info*@
            <span itemprop="ratingValue" style="display: none;">@ratingValue.ToString("0.0", new CultureInfo("en-US"))</span>
            <span itemprop="reviewCount" style="display: none;">@Model.TotalReviews</span>
        </div>
    </div>
    <div class="col-6">
        <div class="rating_list">
            <h3>Based on @Model.TotalReviews Reviews</h3>
            <ul class="list">
                <li>
                    <a href="#">
                        5 Star <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i> 00
                    </a>
                </li>
                <li>
                    <a href="#">
                        4 Star <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i> 00
                    </a>
                </li>
                <li>
                    <a href="#">
                        3 Star <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i> 00
                    </a>
                </li>
                <li>
                    <a href="#">
                        2 Star <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i> 00
                    </a>
                </li>
                <li>
                    <a href="#">
                        1 Star <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i> 00
                    </a>
                </li>
            </ul>
        </div>
    </div>
}