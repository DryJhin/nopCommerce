@model IList<ManufacturerBriefInfoModel>
@if (Model.Count > 0)
{
    <li>
        @if (Model.Count == 1)
        {
            <span class="label">@T("Products.Manufacturer"):</span>
        }
        else
        {
            <span class="label">@T("Products.Manufacturers"):</span>
        }
        :
        @for (var i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" class="active">@item.Name</a>
            if (i != Model.Count - 1)
            {
                <span class="separator">,</span>
            }
        }
    </li>
}